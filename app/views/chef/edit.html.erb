<h1>Edit</h1>
   
    <%= link_to "home", chefhome_path, class: "btn btn-lg btn-primary" %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= form_for(@recipes, url: chefadd_path) do |f| %>
    
     
      <%= f.label :RecipeName %>
      <%= f.text_field :recipes, class: 'form-control' %>

      <%= f.label :Ingredients %>
      <%= f.text_field :ingredients, class: 'form-control' %>
      
       <%= f.label :Quantity %>
      <%= f.text_field :required_qty_in_gm, class: 'form-control' %>
      
      

 
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

